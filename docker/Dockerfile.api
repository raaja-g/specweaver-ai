FROM python:3.12-slim
WORKDIR /app
COPY requirements.txt ./
RUN pip install --no-cache-dir -r requirements.txt && pip install rq redis
COPY backend ./backend
COPY tests ./tests
COPY artifacts ./artifacts
EXPOSE 8080
CMD ["python", "-m", "uvicorn", "backend.api.api.app:app", "--host", "0.0.0.0", "--port", "8080"]
